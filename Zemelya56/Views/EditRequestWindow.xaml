<Window x:Class="Zemelya56.Views.EditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zemelya56.Views"
        mc:Ignorable="d"
       Title="Edit Request" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Title" Margin="10,10,0,0"/>
            <TextBox Name="Title" Margin="10,10,10,10" />
            <Label Content="Description" Margin="10,10,0,0"/>
            <TextBox Name="Description" Margin="10,10,10,10" />
            <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="0,0,0,10" />
            <Button Name="DeleteButton" Content="Delete" Click="DeleteButton_Click" />
        </StackPanel>
    </Grid>
</Window>
